// main.cpp


#include "character.h"
#include "map.h"
#include <iostream>
#include <iomanip>
#include <string>
#include <cctype>

using namespace std;

int main() {
    // Character customization
    Character character;

    cout << "Customize your character!" << endl;
    character.customize();

    cout << "\nYour customized character:" << endl;
    character.describe();

    // Map selection
    Maps maps;

    cout << "\nWelcome to the Map Selection!" << endl;
    maps.chooseMap();

    return 0;
}
