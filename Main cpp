#include "Vehicle.h"
#include "map.h"
#include <iostream>

void displayMenu() {
    std::cout << "\nMain Menu:\n";
    std::cout << "1. Create and customize a vehicle\n";
    std::cout << "2. Select a map\n";
    std::cout << "3. Exit\n";
    std::cout << "Enter your choice: ";
}

int main() {
    Vehicle vehicle;  // Default vehicle
    Maps maps;        // Predefined maps

    bool running = true;
    while (running) {
        displayMenu();
        int choice;
        std::cin >> choice;

        switch (choice) {
            case 1:
                std::cout << "\n--- Customize Your Vehicle ---\n";
                vehicle.customize();
                std::cout << "\n--- Your Vehicle ---\n";
                vehicle.display();
                break;

            case 2:
                std::cout << "\n--- Select a Map ---\n";
                maps.chooseMap();
                break;

            case 3:
                std::cout << "Exiting the program. Goodbye!\n";
                running = false;
                break;

            default:
                std::cout << "Invalid choice! Please try again.\n";
        }
    }

    return 0;
}
